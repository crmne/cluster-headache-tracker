<div class="card bg-base-100 shadow-md hover:shadow-lg transition-all duration-200">
  <div class="card-body p-3 sm:p-4">
    <%= form_with(model: headache_log, class: "space-y-4", id: "headache_log") do |form| %>
      <% if headache_log.errors.any? %>
        <div class="alert alert-error">
          <%= heroicon "x-circle", variant: "mini", class: "w-5 h-5" %>
          <ul class="list-disc list-inside">
            <% headache_log.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div class="bg-base-200/50 rounded-lg p-3" data-controller="time">
          <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
            <%= heroicon "clock", variant: "mini", class: "w-4 h-4" %>
            Start Time
          </h3>
          <div class="join w-full">
            <%= form.datetime_local_field :start_time,
                  class: "input input-bordered input-sm join-item flex-1",
                  required: true,
                  data: {
                    time_target: "field",
                    action: "change->time#timeChanged"
                  } %>
            <button type="button" class="btn btn-sm join-item" data-action="time#setNow">
              Now
            </button>
          </div>
        </div>

        <div class="bg-base-200/50 rounded-lg p-3" data-controller="time">
          <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
            <%= heroicon "clock", variant: "mini", class: "w-4 h-4" %>
            End Time
          </h3>
          <div class="join w-full">
            <%= form.datetime_local_field :end_time,
                  class: "input input-bordered input-sm join-item flex-1",
                  data: {
                    time_target: "field",
                    action: "change->time#timeChanged"
                  },
                  value: nil %>
            <button type="button" class="btn btn-sm join-item" data-action="time#setNow">
              Now
            </button>
          </div>
          <% unless local_assigns[:hide_ongoing_badge] %>
            <span class="badge badge-warning badge-xs mt-2" data-time-target="ongoingBadge">
              ONGOING
            </span>
          <% end %>
        </div>
      </div>

      <div class="bg-base-200/50 rounded-lg p-3" data-controller="intensity">
        <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
          <%= heroicon "fire", variant: "mini", class: "w-4 h-4" %>
          Pain Intensity
        </h3>

        <div class="flex items-center gap-3">
          <%= form.range_field :intensity,
                in: 1..10,
                class: "range range-sm flex-1",
                value: form.object.intensity || 5,
                data: {
                  intensity_target: "slider",
                  action: "input->intensity#slide"
                } %>
          <div class="relative">
            <div class="radial-progress shadow-sm"
                style="--size:2.5rem;"
                data-intensity-target="badge">
              <span class="text-base font-bold"
                    data-intensity-target="value">
                <%= form.object.intensity || 5 %>
              </span>
            </div>
            <div class="absolute -inset-1 rounded-full opacity-30 blur-sm"
                 data-intensity-target="glow"></div>
          </div>
        </div>

        <div class="mt-2 text-xs text-base-content/60" data-intensity-target="preview"></div>
      </div>

      <%# Medication and Triggers Fields with Autocomplete %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div class="bg-primary/5 rounded-lg p-3">
          <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
            <%= heroicon "beaker", variant: "mini", class: "w-4 h-4 text-primary" %>
            Medication
          </h3>
          <span class="text-xs text-base-content/60 mb-2 block">Separate multiple with commas</span>
          <%= form.text_field :medication,
            class: "input input-bordered input-sm w-full",
            placeholder: "e.g., Oxygen, Sumatriptan",
            list: "common-medications" %>

          <datalist id="common-medications">
            <option value="Oxygen">
            <option value="Zolmitriptan">
            <option value="Ibuprofen">
            <option value="Paracetamol">
            <option value="Sumatriptan">
          </datalist>
        </div>

        <div class="bg-secondary/5 rounded-lg p-3">
          <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
            <%= heroicon "bolt", variant: "mini", class: "w-4 h-4 text-secondary" %>
            Triggers
          </h3>
          <span class="text-xs text-base-content/60 mb-2 block">Separate multiple with commas</span>
          <%= form.text_field :triggers,
            class: "input input-bordered input-sm w-full",
            placeholder: "e.g., Sleep, Tired",
            list: "common-triggers" %>

          <datalist id="common-triggers">
            <option value="Sleep">
            <option value="Unknown">
            <option value="Tired">
            <option value="Woke up">
            <option value="Laying down">
          </datalist>
        </div>
      </div>

      <%# Notes Field %>
      <div class="bg-base-200 rounded-lg p-3">
        <h3 class="text-sm font-semibold mb-2 flex items-center gap-2">
          <%= heroicon "document-text", variant: "mini", class: "w-4 h-4 text-base-content/60" %>
          Notes
        </h3>
        <%= form.text_area :notes,
              class: "textarea textarea-bordered textarea-sm h-20 w-full",
              placeholder: "Any additional observations or details..." %>
      </div>

      <%# Submit Button %>
      <div class="form-control mt-4">
        <%= form.submit class: "btn btn-primary w-full" %>
      </div>

      <% content_for :hotwire_button do %>
        <div class="flex items-center gap-4"
             data-controller="bridge--button"
             data-bridge-title="<%= form.send(:submit_default_value).split.first %>">
          <%= form.submit form.send(:submit_default_value).split.first, class: "btn", form: form.object_name %>
        </div>
      <% end %>
    <% end %>

    <% if headache_log.persisted? %>
      <div class="form-control mt-2">
        <%= button_to headache_log_path(headache_log),
          method: :delete,
          class: "btn btn-outline btn-error w-full",
          data: { turbo_confirm: "Are you sure you want to delete this headache log?" } do %>
          <%= heroicon "trash", variant: "mini", class: "w-3 h-3" %>
          Delete
        <% end %>
      </div>
    <% end %>
  </div>
</div>
