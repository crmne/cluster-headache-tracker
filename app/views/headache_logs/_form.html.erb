<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <%= form_with(model: headache_log, local: true) do |form| %>
      <% if headache_log.errors.any? %>
        <div class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <ul class="list-disc list-inside">
            <% headache_log.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Start time</span>
        </label>
        <%= form.datetime_local_field :start_time, class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">End time</span>
        </label>
        <%= form.datetime_local_field :end_time, class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Intensity (1-10)</span>
        </label>
        <%= form.number_field :intensity, min: 1, max: 10, class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Medication</span>
        </label>
        <%= form.text_field :medication, class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Triggers</span>
        </label>
        <%= form.text_area :triggers, class: "textarea textarea-bordered" %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Notes</span>
        </label>
        <%= form.text_area :notes, class: "textarea textarea-bordered" %>
      </div>

      <div class="form-control mt-6">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', function() {
    var startTimeField = document.getElementById('headache_log_start_time');

    if (startTimeField && !startTimeField.value) {
      var now = new Date();
      now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
      startTimeField.value = now.toISOString().slice(0,16);
    }

  });
</script>
