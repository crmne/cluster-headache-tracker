<%# app/views/devise/registrations/new.html.erb %>
<% content_for :title, "Create your account" %>

<div class="flex items-center justify-center min-h-[70vh]">
  <div class="card bg-base-100 shadow-md hover:shadow-lg transition-all duration-200 w-full max-w-md mx-4">
    <div class="card-body">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold">Create your account</h2>
        <p class="text-base-content/60">Start tracking your headaches today</p>
      </div>

      <div class="alert alert-warning shadow-lg mb-6">
        <div>
          <%= heroicon "shield-check", class: "h-6 w-6 shrink-0 stroke-current" %>
          <div>
            <h3 class="font-bold">Privacy-First Design</h3>
            <div class="text-sm">
              <strong>No email required</strong> - just choose a username to get started.<br>
              <strong>Remember your password</strong> - if you lose it, it's gone forever. We can't recover it because we don't store your email.
            </div>
          </div>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <div class="form-control">
            <%= f.label :username, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "user", variant: "mini", class: "w-4 h-4" %>
                Username
              </span>
            <% end %>
            <%= f.text_field :username, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "key", variant: "mini", class: "w-4 h-4" %>
                Password
              </span>
              <% if @minimum_password_length %>
                <span class="label-text-alt opacity-70"><%= @minimum_password_length %> characters minimum</span>
              <% end %>
            <% end %>
            <%= f.password_field :password, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password_confirmation, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "key", variant: "mini", class: "w-4 h-4" %>
                Confirm Password
              </span>
            <% end %>
            <%= f.password_field :password_confirmation, class: "input input-bordered w-full", required: true %>
          </div>

          <%= f.submit "Create account", class: "btn btn-primary w-full mt-6" %>
        </div>
      <% end %>

      <div class="divider mt-6">Already have an account?</div>

      <div class="text-center">
        <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-outline btn-wide" %>
      </div>
    </div>
  </div>
</div>
