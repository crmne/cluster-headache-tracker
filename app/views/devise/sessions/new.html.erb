<% content_for :title, "Sign in to your account" %>

<div class="flex items-center justify-center min-h-[70vh]">
  <div class="card bg-base-100 shadow-md hover:shadow-lg transition-all duration-200 w-full max-w-md mx-4">
    <div class="card-body">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold">Welcome back</h2>
        <p class="text-base-content/60">Sign in to continue tracking your headaches</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="space-y-4">
          <div class="form-control">
            <%= f.label :username, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "user", variant: "mini", class: "w-4 h-4" %>
                Username
              </span>
            <% end %>
            <%= f.text_field :username, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "key", variant: "mini", class: "w-4 h-4" %>
                Password
              </span>
            <% end %>
            <%= f.password_field :password, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="label cursor-pointer gap-2">
                <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
                <span class="label-text">Remember me</span>
              </label>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "link link-hover link-primary text-sm" %>
            <% end %>
          </div>

          <%= f.submit "Sign in", class: "btn btn-primary w-full mt-4" %>
        </div>
      <% end %>

      <div class="divider my-4">Don't have an account?</div>

      <div class="text-center">
        <%= link_to "Create new account", new_registration_path(resource_name), class: "btn btn-outline btn-wide" %>
      </div>
    </div>
  </div>
</div>
