<% content_for :title, "Sign in to your account" %>

<div class="container max-w-screen-sm mx-auto">
  <div class="card card-compact sm:card-normal bg-base-100 shadow-md">
    <div class="card-body">
      <%= render "devise/shared/auth_logo",
                 title: "Welcome back",
                 subtitle: "Sign in to continue tracking your headaches" %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="space-y-6">
          <div class="form-control">
            <%= f.label :username, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "user", variant: "mini", class: "w-4 h-4" %>
                Username
              </span>
            <% end %>
            <%= f.text_field :username, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text font-semibold flex items-center gap-2">
                <%= heroicon "key", variant: "mini", class: "w-4 h-4" %>
                Password
              </span>
            <% end %>
            <%= f.password_field :password, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <label class="label cursor-pointer gap-2">
                <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
                <span class="label-text">Remember me</span>
              </label>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "link link-hover link-primary text-sm" %>
            <% end %>
          </div>

          <%= f.submit "Sign in", class: "btn btn-primary w-full mt-6" %>
        </div>
      <% end %>

      <div class="divider mt-8">Don't have an account?</div>

      <div class="text-center">
        <%= link_to "Create new account", new_registration_path(resource_name), class: "btn btn-outline btn-wide" %>
      </div>
    </div>
  </div>
</div>
